{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "suse-ai-catalog gpu-operator values",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "driver": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether the operator manages NVIDIA driver installation on nodes."
        }
      }
    },
    "nfd": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to deploy Node Feature Discovery (disable if already installed)."
        }
      }
    },
    "toolkit": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to deploy the NVIDIA container toolkit component."
        },
        "env": {
          "type": "array",
          "description": "Environment variables passed to the toolkit (used for RKE2/containerd paths).",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "string" }
            },
            "required": ["name", "value"]
          }
        }
      }
    },
    "dcgmExporter": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to deploy DCGM exporter for GPU metrics."
        }
      }
    },
    "validator": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to run the GPU Operator validator components."
        }
      }
    }
  }
}

